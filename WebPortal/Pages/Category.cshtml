@page
@model WebPortal.Pages.CategoryModel
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
    var isEdit = Model.EditCategory?.Id > 0;
}

@section PageHeaders {
    
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">BMS</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Categories</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<div class="row">
    <div class="col-xl-7 mx-auto">
        <div class="card border-top border-0 border-4 border-primary">
            <div class="card-body p-4">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bx-category me-1 font-22 text-primary"></i>
                    </div>
                    <h5 class="mb-0 text-primary">@((isEdit ? "Edit" : "Add New") + " Category")</h5>
                </div>
                <hr>
                <form method="post" asp-page-handler="AddOrEdit" class="row g-3">
                    <input type="hidden" asp-for="EditCategory.Id" />
                    <div class="col-md-8">
                        <label asp-for="EditCategory.Name" class="form-label">Category Name</label>
                        <input asp-for="EditCategory.Name" class="form-control" required />
                        <span asp-validation-for="EditCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EditCategory.PreparationTeamId" class="form-label">Preparation Team</label>
                        <select asp-for="EditCategory.PreparationTeamId" class="form-select" required>
                            <option value="">Select Team</option>
                            @foreach (var team in Model.Teams)
                            {
                                <option value="@team.Id" selected="@(Model.EditCategory.PreparationTeamId == team.Id)">
                                    @team.TeamName
                                </option>
                            }
                        </select>
                        <span asp-validation-for="EditCategory.PreparationTeamId" class="text-danger"></span>
                    </div>
                    <div class="col-12 text-end">
                        <button type="submit" class="btn btn-primary px-5">@((isEdit ? "Update" : "Add"))</button>
                        @if (isEdit)
                        {
                            <a asp-page="./Category" class="btn btn-secondary ms-2">Cancel</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<h6 class="mb-0 text-uppercase">All Categories</h6>
<hr />

<div class="row">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="categoriesTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th hidden>Id</th>
                            <th>Name</th>
                            <th>Preparation Team</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Categories != null && Model.Categories.Count > 0)
                        {
                            int i = 1;
                            foreach (var cat in Model.Categories.OrderBy(c => c.Name))
                            {
                                <tr>
                                    <td>@i</td>
                                    <td hidden>@cat.Id</td>
                                    <td>@cat.Name</td>
                                    <td>@cat.PreparationTeam?.TeamName</td>
                                    <td>
                                        <a asp-page="./Category" asp-route-id="@cat.Id" class="btn btn-outline-primary btn-sm" title="Edit"><i class='bx bx-edit'></i></a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@cat.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete"><i class='bx bx-trash'></i></button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {    
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable();
        });
    </script>
}