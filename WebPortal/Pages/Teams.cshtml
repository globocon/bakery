@page
@model WebPortal.Pages.TeamsModel
@{
	ViewData["Title"] = "Teams";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
	<div class="breadcrumb-title pe-3">BMS</div>
	<div class="ps-3">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0 p-0">
				<li class="breadcrumb-item">
					<a href="javascript:;"><i class="bx bx-home-alt"></i></a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Teams List</li>
			</ol>
		</nav>
	</div>
</div>
<!--end breadcrumb-->
<div class="row">
	<div class="col-xl-7 mx-auto">
		<div class="card border-top border-0 border-4 border-primary">
			<div class="card-body p-4">
				<div class="card-title d-flex align-items-center">
					<div>
						<i class="bx bxs-user me-1 font-22 text-primary"></i>
					</div>
					<h5 class="mb-0 text-primary">New Teams</h5>
				</div>
				<hr>
				<form class="row g-3">
					<div class="col-md-12">
						<label for="inputTeamsName" class="form-label">Teams Name</label>
						<div class="input-group">
							<span class="input-group-text bg-transparent"><i class='bx bxs-user'></i></span>
							<input type="text" class="form-control border-start-0" id="inputTeamsName" placeholder="Teams Name" />
						</div>
					</div>
					<div class="col-12 text-end">
						<button type="submit" class="btn btn-primary px-5">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>



<h6 class="mb-0 text-uppercase">All Teams</h6>
<hr />

<div class="row">
	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
				<table id="tblTeams" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						@{
							foreach (var team in Model.Teams)
							{
								<tr>
									<td>@team.Id.ToString()</td>
									<td>@team.TeamName</td>
									<td>
										<div class="d-flex order-actions">
											
											<button type="button" class="btn btn-outline-primary" data-editid="@team.Id.ToString()"><i class='bx bx-edit me-0'></i></button>
											<button type="button" class="btn btn-outline-danger ms-4" data-deleteid="@team.Id.ToString()"><i class='bx bx-trash-alt me-0'></i></button>											
										</div>
									</td>
								</tr>
							}
						}						
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!--end row-->