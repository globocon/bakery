@page
@model WebPortal.Pages.CustomersModel
@{
	ViewData["Title"] = "Customers";
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
	<div class="breadcrumb-title pe-3">BMS</div>
	<div class="ps-3">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0 p-0">
				<li class="breadcrumb-item">
					<a href="javascript:;"><i class="bx bx-home-alt"></i></a>
				</li>
				<li class="breadcrumb-item active" aria-current="page">Customer List</li>
			</ol>
		</nav>
	</div>
	<div class="ms-auto">
		<div class="btn-group">
			<button type="button" class="btn btn-primary"><i class='bx bxs-plus-square'></i>New Customer</button>
		</div>
	</div>
</div>
<!--end breadcrumb-->
<h6 class="mb-0 text-uppercase">All Customers</h6>
<hr />
<div class="row row-cols-1 row-cols-lg-2 row-cols-xl-4">
	@{
			// This is where you can dynamically generate customer cards if you have a list of customers.
		// For example, you could loop through a list of customer objects and create a card for each.
		
		foreach(var customer in Model.Customers)
		{
			var customerId = customer.CustomerId;
			var imgExtn = customer.ImgFileExtn;
			var imagePath = !string.IsNullOrEmpty(imgExtn)
			? $"/uploads/Customers/{customerId}{imgExtn}"
			: "/assets/images/avatars/NoCustomerImage.jpg";

			<div class="col">
				<div class="card radius-15">
					<div class="card-body text-center">
						<div class="p-4 border radius-15">
							<img src="@imagePath" width="110" height="110" class="rounded-circle shadow" alt="">
							<h5 class="mb-0 mt-5">@customer.Name</h5>
							<p class="mb-3">@customer.Address</p>
							<div class="btn-group" role="group" aria-label="Basic example">
								<button type="button" class="btn btn-outline-primary"><i class='bx bx-pencil me-0'></i></button>
								<button type="button" class="btn btn-outline-danger"><i class='bx bx-trash me-0'></i></button>
							</div>
						</div>
					</div>
				</div>
			</div>
        }

	}	
</div>

<!--end row-->