@page
@model WebPortal.Pages.RawMaterialsModel
@{
    ViewData["Title"] = "Raw Materials";
    Layout = "_Layout";
}

@section PageHeaders {
    
}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">BMS</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Raw Materials</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->

<div class="row">
    <div class="col-xl-12 mx-auto">
        <div class="card border-top border-0 border-4 border-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bx-cube me-1 font-22 text-primary"></i>
                    </div>
                    <h5 class="mb-0 text-primary">Raw Materials List</h5>
                </div>
                <hr>
                <div class="table-responsive">
                    <table id="rawMaterialsTable" class="table table-striped table-bordered" style="width:100%">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Stock Quantity</th>
                                <th>Unit</th>
                                <th>Cost Price</th>
                                <th>Created On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RawMaterials != null && Model.RawMaterials.Count > 0)
                            {
                                int i = 1;
                                foreach (var rm in Model.RawMaterials)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@rm.Name</td>
                                        <td>@rm.StockQuantity</td>
                                        <td>@rm.Unit</td>
                                        <td>@rm.CP.ToString("C")</td>
                                        <td>@rm.CreatedOn.ToString("yyyy-MM-dd")</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {    
    <script>
        $(document).ready(function () {
            $('#rawMaterialsTable').DataTable();
        });
    </script>
}