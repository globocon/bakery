@page
@model WebPortal.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

@section PageHeaders {
   @*  <link href="~/assets/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" asp-append-version="true" /> *@
}

<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">BMS</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item">
                    <a href="/"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Products</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 mx-auto">
        <div class="card border-top border-0 border-4 border-primary">
            <div class="card-body p-5">
                <div class="card-title d-flex align-items-center">
                    <div>
                        <i class="bx bx-right-arrow-alt me-1 font-22 text-primary"></i>
                    </div>
                    <h5 class="mb-0 text-primary">Products List</h5>
                </div>
                <hr>
                <div class="table-responsive">
                    <table id="productsTable" class="table table-striped table-bordered" style="width:100%">
                        <thead class="table-primary">
                            <tr>
                                <th>#</th>
                                <th hidden>Id</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Sub Category</th>
                                <th>MRP</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Products != null && Model.Products.Count > 0)
                            {
                                int i = 1;
                                foreach (var product in Model.Products.OrderBy(c=> c.Category.Name))
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td hidden>@product.Id</td>
                                        <td>@product.Name</td>
                                        <td>@product.Category?.Name</td>
                                        <td>@product.SubCategory?.Name</td>
                                        <td>@product.MRP.ToString("C")</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* <script src="~/assets/plugins/datatable/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/assets/plugins/datatable/js/dataTables.bootstrap5.min.js" asp-append-version="true"></script> *@
    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable();
        });
    </script>
}